# useQ AI Assistant Environment Variables

# OpenAI Configuration (Primary LLM Provider)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini Configuration (Fallback LLM Provider)
GEMINI_API_KEY=your_gemini_api_key_here

# Qdrant Vector Database Configuration
QDRANT_URL=localhost:6333
QDRANT_API_KEY=

# SQLite Database Configuration
SQLITE_DB_PATH=storage/useq.db

# Application Configuration
PROJECT_ROOT=.
LOG_LEVEL=info
DEBUG_MODE=true

# MCP Configuration
MCP_FILESYSTEM_ROOT=.
MCP_ALLOWED_EXTENSIONS=.go,.mod,.sum,.yaml,.yml,.json,.md

# Performance Configuration
MAX_FILE_SIZE=10485760
INDEXING_BATCH_SIZE=100
MAX_PARALLEL_WORKERS=4
CACHE_TTL=900

# Security Configuration
ENABLE_COMMAND_EXECUTION=true
ALLOWED_COMMANDS=find,ls,cat,grep,wc,du,ps,git,tree,head,tail,pwd
BLOCKED_COMMANDS=rm,rmdir,mv,cp,chmod,chown,sudo,su,kill,killall